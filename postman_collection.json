{
	"info": {
		"_postman_id": "battleship-api-collection",
		"name": "Battleship API",
		"description": "Complete API collection for Battleship Game API with Redis caching and idempotency support",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3000/api/v1/health/health",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"health",
								"health"
							]
						},
						"description": "Check if the API is running and healthy"
					},
					"response": []
				}
			]
		},
		{
			"name": "Game Management",
			"item": [
				{
					"name": "Start New Game",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "http://localhost:3000/api/v1/game/start",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"game",
								"start"
							]
						},
						"description": "Start a new Battleship game. Returns a game ID that you'll use for subsequent requests."
					},
					"response": []
				},
				{
					"name": "Get Game State",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3000/api/v1/game/{{gameId}}/state",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"game",
								"{{gameId}}",
								"state"
							],
							"variable": [
								{
									"key": "gameId",
									"value": "your-game-id-here",
									"description": "UUID of the game"
								}
							]
						},
						"description": "Get the current state of a game including status, shots fired, and remaining ships."
					},
					"response": []
				},
				{
					"name": "Fire at Coordinate",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "fire-{{$randomUUID}}",
								"description": "Unique key for idempotency. Use same key to test duplicate request handling."
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"coordinate\": \"A1\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:3000/api/v1/game/{{gameId}}/fire",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"game",
								"{{gameId}}",
								"fire"
							],
							"variable": [
								{
									"key": "gameId",
									"value": "your-game-id-here",
									"description": "UUID of the game"
								}
							]
						},
						"description": "Fire at a coordinate (A1-J10). Requires Idempotency-Key header. Send same request twice with same key to test idempotency."
					},
					"response": []
				},
				{
					"name": "Fire at Coordinate (Duplicate - Test Idempotency)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "fire-test-same-key",
								"description": "Use the SAME key as previous request to test idempotency"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"coordinate\": \"A1\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:3000/api/v1/game/{{gameId}}/fire",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"v1",
								"game",
								"{{gameId}}",
								"fire"
							],
							"variable": [
								{
									"key": "gameId",
									"value": "your-game-id-here",
									"description": "UUID of the game"
								}
							]
						},
						"description": "Test idempotency by sending the EXACT same request (same Idempotency-Key and coordinate). Should return cached response with idempotent: true"
					},
					"response": []
				}
			]
		},
